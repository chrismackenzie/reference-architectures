{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
  },
  "variables": {
    "templateBaseUrl": "https://raw.githubusercontent.com/chrismackenzie/template-building-blocks/v1.0.0/",
    "localRepoBaseUrl": "https://raw.githubusercontent.com/chrismackenzie/reference-architectures/chrism/reference-vnet/",
    "buildingBlocks": {
      "virtualNetworkTemplate": "[concat(variables('templateBaseUrl'), 'templates/buildingBlocks/vnet-n-subnet/azuredeploy.json')]",
      "virtualNetworkGatewayTemplate": "[concat(variables('templateBaseUrl'), 'templates/buildingBlocks/vpn-gateway-vpn-connection/azuredeploy.json')]",
      "nsgTemplate": "[concat(variables('templateBaseUrl'), 'templates/buildingBlocks/networkSecurityGroups/azuredeploy.json')]"
    },
    "parameterFiles": {
      "azureAZAEVirtualNetworkParametersFile": "[concat(variables('localRepoBaseUrl'), 'parameters/azae-vnet.parameters.json')]",
      "nsgParametersFile": "[concat(variables('localRepoBaseUrl'), 'parameters/azae-subnet-nsg.parameters.json')]"
    }
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "azure-AZAE-vnet-deployment",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "complete",
        "templateLink": {
          "uri": "[variables('buildingBlocks').virtualNetworkTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "[variables('parameterFiles').azureAZAEVirtualNetworkParametersFile]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "nsg-deployment",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "complete",
        "templateLink": {
          "uri": "[variables('buildingBlocks').nsgTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "[variables('parameterFiles').nsgParametersFile]",
          "contentVersion": "1.0.0.0"
        }
      }
    }
  ]
}

